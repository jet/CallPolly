<?xml version="1.0" encoding="utf-8"?>
<Project>

  <Import Project="Directory.Build.props" />

  <Target Name="Build">
    <Exec Command='dotnet build src/CallPolly -c Release --version-suffix "$(VersionSuffix)" ' WorkingDirectory="$(RepoRootDir)" IgnoreStandardErrorWarningFormat="true" />
  </Target>

  <Target Name="Pack">
    <Exec Command='dotnet pack src/CallPolly -c Release -o "$(NupkgsDir)" --version-suffix "$(VersionSuffix)" ' WorkingDirectory="$(RepoRootDir)" IgnoreStandardErrorWarningFormat="true" />
  </Target>

  <Target Name="Test">
    <Exec Command='dotnet test tests/CallPolly.Tests -c Release --logger:trx' WorkingDirectory="$(RepoRootDir)" IgnoreStandardErrorWarningFormat="true" />
    <Exec Command='dotnet test tests/CallPolly.Acceptance -c Release --logger:trx' WorkingDirectory="$(RepoRootDir)" IgnoreStandardErrorWarningFormat="true" />
  </Target>

  <Target Name="VSTest" DependsOnTargets="Test" />

</Project>
